html
  body
    .container
      .hero-unit
        .row
          .span10
            ul
              .span4
                img(src='/static/img/fans.gif')
              .span4(ng-controller='TurbineDetailControl')
                li 实时功率:
                span ((turbine.data.power))kw
                li no:
                span ((turbine.name))
                li 风速:
                span ((turbine.data.windspeed))m/s
                li state:
                span ((turbine.data.state))
            div(ng-controller='TurbineHourHistoryControl')
              div ((turbindata))
